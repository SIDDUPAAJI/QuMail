<Window x:Class="QuMailClient.OutboxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Encrypted Outbox" Height="400" Width="800" Background="#121417">

    <Grid Margin="10">
        <DataGrid x:Name="DgHistory" 
                  AutoGenerateColumns="False" 
                  Background="#1C1F26" 
                  Foreground="#A0AEC0" 
                  RowBackground="#1C1F26" 
                  GridLinesVisibility="None"
                  BorderThickness="0"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="TIME" Binding="{Binding Timestamp, StringFormat=\{0:HH:mm:ss\}}" Width="100"/>
                <DataGridTextColumn Header="RECIPIENT" Binding="{Binding Recipient}" Width="150"/>
                <DataGridTextColumn Header="KEY ID" Binding="{Binding KeyId}" Width="100"/>

                <DataGridTextColumn Header="SECURE PAYLOAD" Binding="{Binding Ciphertext}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Ciphertext}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>